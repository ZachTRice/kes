{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "standard",
  "rules": {
    "semi": [2, "always"],
    "space-before-function-paren": "off",
    "spaced-comment": "off",
    "no-extra-semi": 2,
    "brace-style": ["error", "stroustrup"],
    "semi-spacing": [2, { "before": false, "after": true }]
  }
}
